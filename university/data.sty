\NeedsTeXFormat{LaTeX2e}[1999/12/01]

\ProvidesPackage{eclectex/university/data}
  [2013/07/11 v0.0 Generic university data.]

\ProcessOptions\relax

%---[ Packages ]---

\RequirePackage{eclectex/document/data}
\RequirePackage{eclectex/document/keywords}

\RequirePackage{etoolbox}

%---[ Commands ]---

\newcommand{\university}[1]{\def\@university{#1}}
\newcommand{\faculty}[1]{\def\@faculty{#1}}
\newcommand{\department}[1]{\def\@department{#1}}

%---[ Defaults ]---

\university{}
\faculty{}
\department{}

\AtEndPreamble
  {\keywords{\@university}
   \keywords{\@faculty}
   \keywords{\@department}}

\AtEndPreamble
  {\ifdefvoid{\@author}
    {\author
       {\ifdefvoid{\@department}{}
          {\@department}%
        \ifdefvoid{\@faculty}{}
          {\ifdefvoid{\@department}{}{/ }\@faculty}%
        \ifdefvoid{\@university}{}
          {\ifdefvoid{\@faculty}{}{/ }\@university}}}{}}
