%---[ Commands ]---

%% UCL logo

\ifxetex
\newcommand{\UCL@logofont}{\fontspec{Frutiger LT Std 75 Black}}
\else
\newcommand{\UCL@logofont}{\sffamily} % not tested
\fi

\newcommand{\UCL@logocontent}{U{\kern+.05ex}C{\kern+.1ex}Louvain}

\newlength{\UCL@logopadding}
\setlength{\UCL@logopadding}{3pt}

\newlength{\UCL@logowidth}
\settowidth{\UCL@logowidth}{\UCL@logofont\UCL@logocontent}
\addtolength{\UCL@logowidth}{\UCL@logopadding}

\newlength{\UCL@logoheight}
\settoheight{\UCL@logoheight}{\UCL@logofont\UCL@logocontent}
\addtolength{\UCL@logowidth}{\UCL@logopadding}
%\setlength{\UCL@logoheight}{.5\UCL@logowidth}

\newcommand{\UCLlogo}
  {\tikz
     \node
       [fill=UCLdark,
        inner sep=\UCL@logopadding,
        %minimum width=\UCL@logowidth,
        %minimum height=\UCL@logoheight,
        font=\UCL@logofont]
       {\textcolor{white}{\UCL@logocontent}};}
