\NeedsTeXFormat{LaTeX2e}[1999/12/01]

\ProvidesPackage{eclectex/document/data}
  [2012/12/12 v0.0 Workshop data.]

\ProcessOptions\relax

%---[ Packages ]---

\RequirePackage{pgfkeys}
\RequirePackage{datetime}

%---[ Commands & environments ]---

\newcommand{\workshopAcronym}[1]
  {\def\workshop@acronym{#1}}

\newcommand{\workshopTitle}[1]
  {\def\workshop@title{#1}}

\newcommand{\workshopDate}[3]
  {\newdate{workshop@date}{#3}{#2}{#1}}

\newcommand{\workshopWebsite}[2][]
  {\ifblank{#1}%
     {\def\workshop@website{#2}}%
     {\def\workshop@website{#1}}%
   \def\workshop@websiteURL{#2}}

\newcommand{\workshopWebsiteURL}[1]
  {\def\workshop@websiteURL{#1}}

\newcommand{\workshopOrganisers}[1]
  {\def\workshop@organisers{#1}}

%% Formatting

\pgfkeys
  {/generic/workshop/.cd,
   titleFont/.store in=\workshop@titleFont,
   acronymFont/.store in=\workshop@acronymFont,
   dateFont/.store in=\workshop@dateFont}
