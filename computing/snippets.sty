\renewcommand{\lstlistingname}{Snippet}

\lstset
 {basicstyle=\small\ttfamily}

\lstdefinestyle{floating}
 {float=t,
  captionpos=b,
  abovecaptionskip=-0\medskipamount,
  belowcaptionskip=-0\medskipamount,
  aboveskip=-0\medskipamount,
  belowskip=-0\medskipamount}

\lstdefinestyle{code}
  {aboveskip=0\medskipamount,
   belowskip=0\medskipamount,
   numberstyle=\tiny,
   escapechar=`}

\lstnewenvironment{snippet}[1][]{\lstset{style=code,#1}}{}

